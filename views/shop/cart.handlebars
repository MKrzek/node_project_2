<main>
  {{#if hasProducts}}
    <h1>
      {{pageTitle}}
    </h1>
    <ul class="cart__item-list">
      {{#each products}}
        <li class="cart__item">
          <h1>
            {{this.productId.title}}
          </h1>
          <h2>
            Quantity
            {{this.quantity}}
          </h2>
          <form method="POST" action="/cart-delete-item">
            <input type="hidden" name="_csrf" value={{csrfToken}} />
            <input
              type="hidden"
              name="productId"
              value={{this.productId._id}}
            />
            <button type="submit" class="btn">
              Delete
            </button>
          </form>
        </li>
      {{/each}}
    </ul>
    <div class="centered">
      <form action="/create-order" method="POST">
        <input type="hidden" name="_csrf" value={{csrfToken}} />
        <button class="btn" type="submit">
          Order Now!
        </button>
      </form>
    </div>
  {{else}}
    <h1>
      There are no products in your cart
    </h1>
  {{/if}}
</main>