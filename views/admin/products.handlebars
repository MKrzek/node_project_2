<main>
  <h1>
    {{pageTitle}}
  </h1>
  {{#if hasProducts}}
    <div class="grid">
      {{#each products}}
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title">
              {{this.title}}
            </h1>
          </header>
          <div class="card__image">
            <img src="/{{this.imageURL}}" alt="{{this.title}}" />
          </div>
          <div class="card__content">
            <h2 class="product__price">
              Â£
              {{this.price}}
            </h2>
            <p class="product__description">
              {{this.description}}
            </p>
          </div>
          <div class="card__actions">
            <a class="btn" href="/admin/edit-product/{{this._id}}">
              Edit
            </a>
            <a class="btn" href="/admin/delete-product/{{this._id}}">
              Delete
            </a>
          </div>
        </article>
      {{/each}}
    </div>
  {{else}}
    <h1>
      No Products found
    </h1>
  {{/if}}
</main>