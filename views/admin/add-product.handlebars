<body>
    <main>
        <form class='product-form' action='/admin/add-product' method='POST'>
            <div class='form-control'>
                <label for='title'>Title</label>
                <input id='title' type='text' name='title' />
            </div>
            <div class='form-control'>
                <label for='price'>Price</label>
                <input id='price' type='number' name='price' step="0.01" />
            </div>
            <div class='form-control'>
                <label for='imageURL'>Image</label>
                <input id='image' type='text' name='imageURL' />
            </div>
            <div class='form-control'>
                <label for='description'>Description</label>
                <textarea id='description' type='text' name='description' rows="5"></textarea>
            </div>
            <button class='submit-button' type='submit'>Add product</button>
        </form>
    </main>
</body>